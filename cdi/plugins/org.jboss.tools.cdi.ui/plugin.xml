	<extension
		point="org.eclipse.ui.menus">
	<menuContribution
	      class="org.jboss.tools.cdi.ui.refactoring.CDIRefactorContributionFactory"
	      locationURI="popup:org.eclipse.ui.popup.any?after=save">
	</menuContribution>
	
    <menuContribution
